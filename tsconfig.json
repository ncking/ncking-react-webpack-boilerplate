{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "es2022",
    "module": "es2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@components": ["./src/components"]
    }
  },
  "include": ["src/**/*"]
}